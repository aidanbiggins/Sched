# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# Google OAuth (for calendar access)
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth (for calendar access)
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Application Mode
# APP_MODE=standalone: Personal calendar scheduling (no ATS integration)
# APP_MODE=enterprise: Full iCIMS ATS integration
APP_MODE=standalone

# Graph API Configuration
# Set GRAPH_MODE=real to use Microsoft Graph API
# Set GRAPH_MODE=mock for development with mock data
GRAPH_MODE=mock

# Required when GRAPH_MODE=real:
# Azure AD Tenant ID (UUID format)
GRAPH_TENANT_ID=

# Azure AD App Registration Client ID (UUID format)
GRAPH_CLIENT_ID=

# Azure AD App Registration Client Secret (from Azure Portal)
GRAPH_CLIENT_SECRET=

# Organizer mailbox email (service account that owns all calendar events)
GRAPH_ORGANIZER_EMAIL=scheduling@example.com

# Optional retry configuration (defaults shown)
GRAPH_MAX_RETRIES=3
GRAPH_RETRY_DELAY_MS=1000

# Enable Teams meeting links (requires OnlineMeetings.ReadWrite.All permission)
GRAPH_ENABLE_TEAMS=false

# iCIMS Configuration
ICIMS_MODE=mock
ICIMS_API_KEY=
ICIMS_BASE_URL=

# Webhook Configuration
ICIMS_WEBHOOK_SECRET=test-webhook-secret

# Public Link Security
TOKEN_HASH_PEPPER=change-this-in-production
PUBLIC_LINK_TTL_DAYS=14

# SMTP Configuration (optional - for email notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Database Configuration
# DB_MODE=memory (default): Uses in-memory storage for development
# DB_MODE=supabase: Uses Supabase PostgreSQL for production
DB_MODE=memory

# Supabase Configuration (required when DB_MODE=supabase)
# Create a project at https://supabase.com and get these values from Settings > API
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Direct PostgreSQL connection (optional, for migrations and CLI tools)
DATABASE_URL=
